<div class="cointainer mt-5">>
<h1> My Task </h1>
<ul>
  <% @tasks.each do |task| %> 
    <li>     
    <%= task.title %><br><%= link_to "🗑️",
  task_path(task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
 %>
    </li>
  <% end %>

<%= link_to "Add new task", tasks_new_path %>
</div>
